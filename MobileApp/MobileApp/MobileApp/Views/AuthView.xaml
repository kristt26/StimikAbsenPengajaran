<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.AuthView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="50" VerticalOptions="CenterAndExpand">
                <Entry Margin="10" Text="{Binding Model.UserName}" Placeholder="User Name" HorizontalOptions="FillAndExpand"/>
                <Entry Margin="10" Text="{Binding Model.Password}" Placeholder="Password" HorizontalOptions="FillAndExpand"/>
                <Button Margin="10" Text="Login" BackgroundColor="#2B9DB1" WidthRequest="200" HeightRequest="55"
                VerticalOptions="CenterAndExpand" TextColor="White"
                HorizontalOptions="CenterAndExpand" Command="{Binding LoginCommand}" />
            </StackLayout>
            <Label Margin="10" TextColor="Silver" HorizontalOptions="Center" VerticalOptions="End" Text="Ocph23 - 2019"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>